# inherit_from: .rubocop_todo.yml
# require:
#   - rubocop-rspec
#   - rubocop-performance

AllCops:
  EnabledByDefault: true
  TargetRubyVersion: 2.5.5
  Exclude:
    - 'app/views/**/*'
    - 'db/**/*'
    - 'bin/**/*'
    - 'csv/**/*'
    - 'slate/**/*'
    - 'vendor/bundle/**/*'
    - 'node_modules/**/*'

Style/Copyright:
  Enabled: true
  AutocorrectNotice: '# Copyright:: 2020, Begley Brothers Inc.'

Layout/AlignHash:
  Enabled: true
  EnforcedHashRocketStyle: table
  EnforcedColonStyle: table
Style/RegexpLiteral:
  AllowInnerSlashes: true
  EnforcedStyle: mixed
